@model ApplicationSite.Models.AppliedCandidates

@{
    ViewBag.Title = "Edit";
    string title = string.Format("{0} {1} - {2}", Model.User.FirstName, Model.User.LastName, Model.Position.Title);
}

<h2>@title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Candidate Status</h4>
        <hr />
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.AppliedTime)
        <div class="form-group">
            @Html.LabelFor(model => model.AppliedCandidateState, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.AppliedCandidateState, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.AppliedCandidateState, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ManageEmployee", "Manage")
</div>