@model ApplicationSite.ViewModels.PositionsListDetailViewModel
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-lg-12">
        <h2>@Model.Position.Title</h2>
        <p>@Model.Position.Description</p>
        @if (!Model.HasAlreadyApplied)
        {
            <button class="btn btn-default" onclick="location.href = '@Url.Action("Apply", "Positions", new { id = Model.Position.Id }, null)' " type="button" title="Apply">Apply</button>
        }
        else
        {
            <button class="btn btn-default" onclick="location.href = '@Url.Action("Withdraw", "Positions", new { id = Model.Position.Id }, null)' " type="button" title="Withdraw">Withdraw</button>
        }
    </div>
</div>

